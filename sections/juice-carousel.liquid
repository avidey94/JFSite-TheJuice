{% comment %}
  Juice Carousel Section
  - Mobile: Full-screen vertical swipe carousel
  - Desktop: Grid layout with hover effects
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9.4.1/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@9.4.1/swiper-bundle.min.js" defer></script>
<link rel="stylesheet" href="{{ 'juice.css' | asset_url }}" />
<script src="{{ 'juice.js' | asset_url }}" defer></script>

<div class="juice-container">
  {% comment %} Mobile: Swiper carousel {% endcomment %}
  <div class="juice-carousel swiper-container">
    <div class="swiper-wrapper">
      {% for i in (1..8) %}
      <div class="swiper-slide juice-card">
        <video
          class="juice-video"
          src="https://cdn.shopify.com/videos/c/o/v/2581e92449cb46e59c6cbf09108e4d62.mp4"
          autoplay
          muted
          loop
          playsinline
        ></video>
      </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>

  {% comment %} Desktop: Grid layout {% endcomment %}
  <div class="juice-grid">
    {% for i in (1..8) %}
    <div class="juice-card">
      <video
        class="juice-video"
        src="https://cdn.shopify.com/videos/c/o/v/2581e92449cb46e59c6cbf09108e4d62.mp4"
        autoplay
        muted
        loop
        playsinline
      ></video>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Juice Carousel",
  "settings": [],
  "presets": [
    {
      "name": "Juice Carousel",
      "category": "Video"
    }
  ]
}
{% endschema %} 