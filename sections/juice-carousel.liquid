{% comment %}
  Juice Carousel Section
  - Mobile: Full-screen vertical swipe carousel
  - Desktop: Grid layout with hover effects
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9.4.1/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@9.4.1/swiper-bundle.min.js" defer></script>
<link rel="stylesheet" href="{{ 'juice.css' | asset_url }}" />
<script src="{{ 'juice.js' | asset_url }}" defer></script>

<div class="juice-container">
  {% comment %} Mobile: Swiper carousel {% endcomment %}
  <div class="juice-carousel swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide juice-card" style="background-color: #FF0000;"></div>
      <div class="swiper-slide juice-card" style="background-color: #FF7F00;"></div>
      <div class="swiper-slide juice-card" style="background-color: #FFFF00;"></div>
      <div class="swiper-slide juice-card" style="background-color: #00FF00;"></div>
      <div class="swiper-slide juice-card" style="background-color: #0000FF;"></div>
      <div class="swiper-slide juice-card" style="background-color: #4B0082;"></div>
      <div class="swiper-slide juice-card" style="background-color: #8B00FF;"></div>
      <div class="swiper-slide juice-card" style="background-color: #FF1493;"></div>
    </div>
    <div class="swiper-pagination"></div>
  </div>

  {% comment %} Desktop: Grid layout {% endcomment %}
  <div class="juice-grid">
    <div class="juice-card" style="background-color: #FF0000;"></div>
    <div class="juice-card" style="background-color: #FF7F00;"></div>
    <div class="juice-card" style="background-color: #FFFF00;"></div>
    <div class="juice-card" style="background-color: #00FF00;"></div>
    <div class="juice-card" style="background-color: #0000FF;"></div>
    <div class="juice-card" style="background-color: #4B0082;"></div>
    <div class="juice-card" style="background-color: #8B00FF;"></div>
    <div class="juice-card" style="background-color: #FF1493;"></div>
  </div>
</div>

